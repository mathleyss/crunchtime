{% extends 'base.html.twig' %}

{% block title %}CrunchTime{% endblock %}

{# On dit à Turbo de ne pas garder cette page en mémoire cache.
   Cela force le rechargement des données (et donc des boutons) quand on revient dessus. #}
{% block meta %}
    <meta name="turbo-cache-control" content="no-cache">
{% endblock %}

{% block body_id %}homePage{% endblock %}

{% block header_content %}
    <div class="headerContent" role="region" aria-label="En-tête principal">
        <h1>Bienvenue sur Crunchtime</h1>
        <p>Swipez, découvrez, partagez</p>
        <!-- BARRE DE RECHERCHE -->
        <div class="searchBar" role="search">
            <form action="{{ path('app_search') }}" method="GET" aria-label="Formulaire de recherche">
                <img src="{{ asset('images/icon/search.svg') }}" alt="Icône de recherche" aria-hidden="true">
                <input type="text" name="query" placeholder="Rechercher..." class="searchInput" required aria-label="Rechercher un film ou une série">
            </form>
        </div>
    </div>
{% endblock %}

{% block body %}
    {# Macro pour générer un carrousel #}
    {% macro carousel(title, items, type, userWatchlist) %}
        <section class="carousel-section" aria-label="{{ title }}">
            <div class="catFilmsRecents navTitleArrow">
                <h3 class="catTitle">{{ title }}</h3>
                <div class="buttonNav" role="group" aria-label="Navigation">
                    {# Vos SVG Précédent/Suivant #}
                    <svg class="prev" viewBox="0 0 24 24" width="24" height="24"><path d="M13.75 16.25C13.6515 16.2505 13.5538 16.2313 13.4628 16.1935C13.3718 16.1557 13.2893 16.1001 13.22 16.03L9.72001 12.53C9.57956 12.3894 9.50067 12.1988 9.50067 12C9.50067 11.8013 9.57956 11.6107 9.72001 11.47L13.22 8.00003C13.361 7.90864 13.5285 7.86722 13.6958 7.88241C13.8631 7.89759 14.0205 7.96851 14.1427 8.08379C14.2649 8.19907 14.3448 8.35203 14.3697 8.51817C14.3946 8.68431 14.363 8.85399 14.28 9.00003L11.28 12L14.28 15C14.4205 15.1407 14.4994 15.3313 14.4994 15.53C14.4994 15.7288 14.4205 15.9194 14.28 16.06C14.1353 16.1907 13.9448 16.259 13.75 16.25Z" fill="#000000"></path></svg>
                    <svg class="next" viewBox="0 0 24 24" width="24" height="24"><path d="M10.25 16.25C10.1493 16.2466 10.0503 16.2227 9.95921 16.1797C9.86807 16.1367 9.78668 16.0756 9.72001 16C9.57956 15.8594 9.50067 15.6688 9.50067 15.47C9.50067 15.2713 9.57956 15.0806 9.72001 14.94L12.72 11.94L9.72001 8.94002C9.66069 8.79601 9.64767 8.63711 9.68277 8.48536C9.71786 8.33361 9.79933 8.19656 9.91586 8.09322C10.0324 7.98988 10.1782 7.92538 10.3331 7.90868C10.4879 7.89198 10.6441 7.92391 10.78 8.00002L14.28 11.5C14.4205 11.6407 14.4994 11.8313 14.4994 12.03C14.4994 12.2288 14.4205 12.4194 14.28 12.56L10.78 16C10.7133 16.0756 10.6319 16.1367 10.5408 16.1797C10.4497 16.2227 10.3507 16.2466 10.25 16.25Z" fill="#000000"></path></svg>
                </div>
            </div>
            <div class="carousel-container">
                <div class="carousel">
                    {% for item in items %}
                        {% set title = item.title ?? item.name %}
                        {% set date = item.release_date ?? item.first_air_date %}

                        {# On ajoute un ID pour l'ancrage au retour du contrôleur #}
                        <div class="movie-card" id="media_{{ type }}_{{ item.id }}">
                            <div class="movie-poster">
                                <a href="{{ path('app_media_details', {id: item.id, type: type}) }}">
                                    {% if item.poster_path %}
                                        <img src="https://image.tmdb.org/t/p/w500{{ item.poster_path }}" alt="{{ title }}" loading="lazy">
                                    {% else %}
                                        <img src="{{ asset('images/placeholder_movie.png') }}" alt="{{ title }}" class="placeholder-poster">
                                    {% endif %}
                                </a>

                                {# Bouton Plus d'infos #}
                                <button class="btn-more-info" aria-label="Plus d'options">
                                    <svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/></svg>
                                </button>

                                {# Popup #}
                                <div class="card-popup hidden">
                                    <a href="{{ path('app_media_details', {id: item.id, type: type}) }}" class="popup-link">Plus de détails</a>
                                    {% if app.user %}
                                        <div class="popup-watchlist-action">
                                            {% if userWatchlist[type ~ '_' ~ item.id] is defined %}
                                                <form action="{{ path('watchlist_toggle', {type: type, id: item.id, context: 'index'}) }}" method="post">
                                                    <button type="submit" class="btn-popup-watchlist remove">Retirer de la watchlist</button>
                                                </form>
                                            {% else %}
                                                <form action="{{ path('watchlist_toggle', {type: type, id: item.id, context: 'index'}) }}" method="post">
                                                    <button type="submit" class="btn-popup-watchlist add">Ajouter à la watchlist</button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <h4>{{ title }}</h4>
                            <p>{{ date|date('Y') }}</p>
                        </div>
                    {% else %}
                        <p>Aucun contenu trouvé.</p>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endmacro %}

    <main role="main">
        {{ _self.carousel('Films tendances', trendingMovies, 'movie', userWatchlist) }}

        {{ _self.carousel('Films d\'action', actionMovies, 'movie', userWatchlist) }}

        {{ _self.carousel('Séries tendances', trendingSeries, 'tv', userWatchlist) }}

        {{ _self.carousel('Séries les mieux notées', topRatedSeries, 'tv', userWatchlist) }}
    </main>
{% endblock %}
