{% extends 'base.html.twig' %}

{% block title %}Inscription - CrunchTime{% endblock %}

{% block body_id %}registerPage{% endblock %}
{% block header %}{% endblock %}

{% block body %}
    <main role="main">
        <div class="loginContainer">
            <div class="logoContainer">
                <a href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logo.png') }}" alt="Logo CrunchTime">
                </a>
                <h1>CrunchTime</h1>
            </div>

            {# Affiche les erreurs globales du formulaire #}
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'loginForm'}}) }}
            <div class="formInput">
                {{ form_label(registrationForm.firstname) }}
                {{ form_widget(registrationForm.firstname) }}
                {{ form_errors(registrationForm.firstname) }}
            </div>
            <div class="formInput">
                {{ form_label(registrationForm.lastname) }}
                {{ form_widget(registrationForm.lastname) }}
                {{ form_errors(registrationForm.lastname) }}
            </div>
            <div class="formInput">
                {{ form_label(registrationForm.username) }}
                {{ form_widget(registrationForm.username) }}
                {{ form_errors(registrationForm.username) }}
            </div>
            <div class="formInput">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="formInput">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <button type="submit" class="submitButton">S'inscrire</button>
            {{ form_end(registrationForm) }}

            <a href="{{ path('app_login') }}" class="registerLink">Déjà un compte ? Se connecter</a>
        </div>
    </main>
{% endblock %}
